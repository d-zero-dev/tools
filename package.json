{
	"private": true,
	"type": "module",
	"scripts": {
		"build": "lerna run build",
		"clean": "lerna run clean",
		"test": "vitest run",
		"lint": "run-s lint:eslint lint:prettier lint:textlint lint:cspell",
		"lint:cspell": "cspell --no-progress --show-suggestions \"{*,packages/@d-zero/*/{*,src/**/*}}/\"",
		"lint:eslint": "eslint --fix \"{*,packages/@d-zero/*/{*,src/**/*}}.{js,cjs,mjs,jsx,ts,cts,mts,tsx}\"",
		"lint:prettier": "prettier --write \"{*,packages/@d-zero/*/{*,src/**/*}}.{md,json,js,cjs,mjs,jsx,ts,cts,mts,tsx}\"",
		"lint:textlint": "textlint --fix \"./{*,packages/@d-zero/*/{*,src/**/*}}.{md}\"",
		"release": "lerna publish",
		"prerelease": "yarn build; yarn test",
		"up": "yarn upgrade-interactive --latest"
	},
	"workspaces": [
		"packages/@d-zero/*"
	],
	"devDependencies": {
		"@d-zero/cspell-config": "5.0.0-alpha.22",
		"@d-zero/eslint-config": "5.0.0-alpha.22",
		"@d-zero/lint-staged-config": "5.0.0-alpha.22",
		"@d-zero/prettier-config": "5.0.0-alpha.22",
		"@d-zero/textlint-config": "5.0.0-alpha.22",
		"@d-zero/tsconfig": "0.2.0",
		"lerna": "8.1.2",
		"npm-run-all2": "6.1.2",
		"typescript": "5.4.5",
		"vitest": "1.5.0"
	},
	"volta": {
		"node": "22.1.0",
		"yarn": "1.22.22"
	}
}
