{
	"extends": [
		// https://github.com/tsconfig/bases
		"@tsconfig/recommended",
		"@tsconfig/strictest",
		"@tsconfig/node-lts"
	],
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext", "DOM"],
		"noPropertyAccessFromIndexSignature": false,
		"exactOptionalPropertyTypes": false
	},
	"include": ["**/*.ts"]
}
